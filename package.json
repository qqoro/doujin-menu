{
  "name": "doujin-menu",
  "displayName": "동인메뉴판",
  "version": "1.0.0",
  "description": "만화책 관리를 위한 데스크톱 어플리케이션",
  "license": "MIT",
  "main": "build/main/main.js",
  "author": {
    "name": "qqoro"
  },
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "tsc --noEmit && node scripts/build.js && electron-builder --win --publish=never",
    "build:port": "tsc --noEmit && node scripts/build.js && electron-builder --win portable --publish=never",
    "build:win": "tsc --noEmit && node scripts/build.js && electron-builder --win --publish=never",
    "build:port:win": "tsc --noEmit && node scripts/build.js && electron-builder --win portable --publish=never",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write src",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@iconify-json/solar": "^1.2.4",
    "@iconify-json/svg-spinners": "^1.2.4",
    "@iconify/vue": "^5.0.0",
    "@types/node": "^24.2.1",
    "@types/semver": "^7.7.0",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^5.5.0",
    "chokidar": "^4.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^6.3.4",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "@internationalized/date": "^3.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/vue-query": "^5.83.1",
    "@tanstack/vue-table": "^8.21.3",
    "@vueuse/core": "^13.6.0",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "electron-window-state": "^5.0.3",
    "knex": "^3.1.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "lucide-vue-next": "^0.539.0",
    "node-hitomi": "^8.1.0",
    "p-queue": "^8.1.0",
    "pinia": "^3.0.3",
    "pretendard": "^1.3.9",
    "reka-ui": "^2.4.1",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "vue": "^3.5.18",
    "vue-router": "4",
    "vue-sonner": "^2.0.2",
    "yauzl": "^3.2.0"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "vue-demi"
    ],
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron"
    ],
    "overrides": {
      "node-abi": "4.12.0"
    }
  }
}
